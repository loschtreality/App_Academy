<h1> <%= @band.name %> </h1>

<section>
  <h4>Albums</h4>
  <ul>
    <% @band.albums.each do |alb| %>
    <li>
      <%= link_to "#{alb.name}" %>
    </li>
    <% end %>
  </ul>
</section>

<section>
  <h4>Links</h4>
  <ul>
    <li>
      <%= link_to "New Album"  %>
    </li>
    <li>
      <%= link_to "Edit Band", edit_band_url%>
    </li>

    <li>
      <%= link_to "Delete Band", band_url, method: :delete %>
    </li>

    <li>
      <%= link_to "All Bands", bands_url %>
    </li>
  </ul>
</section>
